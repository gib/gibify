@import '_nib'
// @import '_fonts'
global-reset()
reset-html5()

//
// Colors
//

// Defaults
text-color  = complement(#325571)
hover-color = darken(text-color, 20%)
colorStops = '#325571 0%', '#8e9fa4 70%', '#decab2 100%'
//colorStops = '#325571 0%', '#8e9fa4 38%', '#decab2 66%', '#f2d580 78%', '#ffa642 100%'

multi-stop-linear-gradient(angle = 180deg, colorStops)
  joined = unquote(join(', ', colorStops))
  background-color: unquote(split(' ', colorStops[0])[0]);
  background-image: linear-gradient(angle, joined);

@keyframes skymation {
  0% { background-position: 50% 0%; }
  50% { background-position: 50% 100%; }
  100% { background-position: 50% 0%; }
}

// Clobber the stylus mixin that adds some old(ish) display fallbacks.
display(val)
  display: val;

//
// General Elements
//
html
  height 100%
  width 100%

body
  align-items center
  animation skymation 120s ease-in-out 0s infinite reverse
  background-position 0% 0%
  background-repeat no-repeat
  // background-size cover
  background-size: 100% 200%;
  color text-color
  display flex
  flex-direction column
  font-family Hack, Courier, monospace
  font-size 14px
  height 100%
  justify-content center
  multi-stop-linear-gradient(180deg, colorStops)
  transform translate3d(0, 0, 0)
  backface-visibility hidden
	perspective 1000

a
  color text-color
  transition color 0.3s ease-in-out
  text-decoration none

//
// Text Selection
//
::selection
  background-color text-color
  color white
  text-shadow none
::-moz-selection
  background-color text-color
  color white
  text-shadow none

//
// Navigation
//

//
// Content
//
.name
  color white
  text-shadow 0 2px 0 text-color
  h1
    font-size 40px
    margin-bottom 20px
.name-description
  transform translate(9px, 2px)


.on-the-web
  display flex
  > div
    margin 0 5px
  svg
    g, path
      fill text-color
      transition: fill 0.25s ease-in-out
  a
    &:hover svg
      g, path
        fill hover-color

.codepen
  height 50px
  width 50px

.github
  height 50px
  width 50px
  svg
    transform scale(0.65)

.twitter
  height 50px
  width 50px
  svg
    transform scale(0.65)

.cv-pdf
  height 50px
  width 50px
  svg
    transform scale(0.55) translate(0,-5px)
